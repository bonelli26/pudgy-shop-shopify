<div class="max-width hero-wrapper">
    <div class="left">
        <div class="tag">{{ section.settings.hero_tag }}</div>
        <h1>{{ section.settings.hero_header }}</h1>
        <p>{{ section.settings.hero_intro }}</p>
        <a class="pink-btn prefetch-us" href="{{ section.settings.hero_button_url }}"><span>Shop Now</span></a>
    </div>
</div>
<img class="preload-critical bg"{% if section.settings.hero_bg.alt %} alt="{{ section.settings.hero_bg.alt }}"{% endif %} data-preload-desktop="https:{{ section.settings.hero_bg | image_url }}" data-preload-mobile="https:{{ section.settings.hero_bg_mobile | image_url }}">


{% schema %}
    {
        "name": "Hero Section",
        "tag": "section",
        "class": "hero mw",
        "settings": [
            {
              "id": "hero_tag",
              "type": "text",
              "label": "Hero Tag"
            },
            {
              "id": "hero_header",
              "type": "text",
              "label": "Hero Header"
            },
            {
              "id": "hero_intro",
              "type": "text",
              "label": "Hero Intro"
            },
            {
              "id": "hero_button_url",
              "type": "text",
              "label": "Hero Button URL"
            },
            {
              "id": "hero_bg",
              "type": "image_picker",
              "label": "Hero BG"
            },
            {
              "id": "hero_bg_mobile",
              "type": "image_picker",
              "label": "Hero BG mobile"
            }
        ]
    }
{% endschema %}
