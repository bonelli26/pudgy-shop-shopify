<div class="max-width">
    <div class="body">
        <h2>{{ section.settings.header }}</h2>
        <p class="copy">{{ section.settings.copy }}</p>
        <div class="media-wrapper">
            <svg width="189" height="189" viewBox="0 0 189 189" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="2.03957" y="2.03957" width="184.921" height="184.921" rx="92.4604" stroke="url(#paint0_linear_2655_14215)" stroke-width="4.07914"/>
                <defs>
                    <linearGradient id="paint0_linear_2655_14215" x1="-0.54643" y1="-0.512421" x2="210.606" y2="28.3463" gradientUnits="userSpaceOnUse">
                        <stop stop-color="#C1ECFF"/>
                        <stop offset="0.25" stop-color="#C1ECFF"/>
                        <stop offset="0.381662" stop-color="white"/>
                        <stop offset="0.608286" stop-color="#C2ECFF"/>
                        <stop offset="1" stop-color="#C1ECFF"/>
                    </linearGradient>
                </defs>
            </svg>
            <img class="preload"{% if section.settings.pengu.alt %} alt="{{ section.settings.pengu.alt }}"{% endif %} data-preload-desktop="https:{{ section.settings.pengu | image_url }}" data-preload-mobile="https:{{ section.settings.pengu | image_url }}">
        </div>
    </div>
</div>

{% schema %}
{
  "name": "XMAS Intro",
  "tag": "section",
  "class": "xmas-intro mw",
  "settings": [
    {
      "id": "header",
      "type": "text",
      "label": "Header"
    },
    {
      "id": "copy",
      "type": "text",
      "label": "Copy"
    },
    {
      "id": "pengu",
      "type": "image_picker",
      "label": "Pengu"
    }
  ]
}
{% endschema %}