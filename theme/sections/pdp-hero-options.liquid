
<div class="max-width pdp-hero-inner">
    <div class="left">
        {% assign imageSize = product.images | size %}
        <div class="slider no-drag-free" data-align="start">
            <div class="frame">
                {% if product.metafields.accentuate.ribbon %}
                    {% for ribbon in product.metafields.accentuate.ribbon %}
                        {% comment %}<img class="preload-critical ribbon" data-preload-desktop="{{ ribbon.src }}" data-preload-mobile="{{ ribbon.src }}">{% endcomment %}
                    {% endfor %}
                {% endif %}
                <div class="slides">
                    <div class="inner">
                        {% for image in product.images limit: 4 %}
                            <div class="slide">
                                <div class="frame-mobile"></div>
                                <img class="preload-critical"{% if image.alt %} alt="{{ image.alt }}"{% endif %} data-preload-desktop="https:{{ image | image_url }}" data-preload-mobile="https:{{ image | image_url }}">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% if imageSize > 1 %}
                <div class="thumbnails dots">
                    {% for image in product.images limit: 4 %}
                        <div class="thumbnail dot{% if forloop.first %} active{% endif %}">
                            <img class="preload-critical bg"{% if image.alt %} alt="{{ image.alt }}"{% endif %} data-preload-desktop="https:{{ image | image_url }}" data-preload-mobile="https:{{ image | image_url }}">
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="right">
        <p class="eyebrow">{{ product.type }}</p>
        <h1>{{ product.title }}</h1>
        <div class="price-wrapper">
            <p class="price">{{ product.price | money }}</p>
