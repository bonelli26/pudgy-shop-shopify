
<div class="max-width pdp-hero-inner">
    <div class="left">
        {% assign imageSize = product.images | size %}
        <div class="slider no-drag-free">
            <div class="frame">
                {% if section.settings.ribbon_image != blank %}
                    <img class="preload-critical ribbon" {% if section.settings.hero_ribbon.alt %} alt="{{ section.settings.hero_ribbon.alt }}"{% endif %} data-preload-desktop="https:{{ section.settings.ribbon_image | image_url }}" data-preload-mobile="https:{{ section.settings.ribbon_image | image_url }}">
                {% endif %}
                <div class="slides">
                    <div class="inner">
                        {% for image in product.images limit: 4 %}
                            <div class="slide">
                                <img class="preload-critical"{% if image.alt %} alt="{{ image.alt }}"{% endif %} data-preload-desktop="https:{{ image | image_url }}" data-preload-mobile="https:{{ image | image_url }}">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% if imageSize > 1 %}
                <div class="thumbnails dots">
                    {% for image in product.images limit: 4 %}
                        <div class="thumbnail dot{% if forloop.first %} active{% endif %}">
                            <img class="preload-critical bg"{% if image.alt %} alt="{{ image.alt }}"{% endif %} data-preload-desktop="https:{{ image | image_url }}" data-preload-mobile="https:{{ image | image_url }}">
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="right">
        <p class="eyebrow">{{ product.type }}</p>
        <h1>{{ product.title }}</h1>
        <div class="price-wrapper">
            <p class="price">{{ product.price | money }}</p>
            {% if product.first_available_variant.compare_at_price %}
            <p class="old-price">{{ product.first_available_variant.compare_at_price | money }}<span><svg width="58" height="28" viewBox="0 0 58 28" fill="none" xmlns="http://www.w3.org/2000/svg"><line x1="1.38793" y1="26.7724" x2="55.7664" y2="1.41531" stroke="#EF928E" stroke-width="2"/><line x1="2.23317" y1="1.41498" x2="56.6116" y2="26.7721" stroke="#EF928E" stroke-width="2"/></svg></span></p>
            {% endif %}
        </div>

        <div class="price-wrapper">
            <p class="compare-at-price{% if thisProduct.compare_at_price %} visible{% endif %}">
                {% if thisProduct.compare_at_price %}
                    {{ thisProduct.compare_at_price | money }}{% endif %}
            </p>
            {{ thisProduct.price | money }}
        </div>

        <div class="after-pay desktop-only">
            <p>Or 4-interest free payments of <strong>$6.99 </strong>with</p><img class="preload" src="https://images.prismic.io/pudgypenguinsshop/acd79ef5-7945-4a3a-93cd-36a1aefd54a5_afterpay.png?auto=compress,format">
        </div>
        <div class="after-pay mobile-only">
            <p>Or 4-interest free payments with</p><img class="preload" src="https://images.prismic.io/pudgypenguinsshop/acd79ef5-7945-4a3a-93cd-36a1aefd54a5_afterpay.png?auto=compress,format">
        </div>
