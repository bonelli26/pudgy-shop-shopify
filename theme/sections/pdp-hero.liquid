            <div class="left-variant variant">
                {% for attribute in product.metafields.accentuate.attribute[0] %}
                    <p>{{ attribute }}</p>
                {% endfor %}
                {% for attribute_value in product.metafields.accentuate.attribute_value[0] %}
                    <p>{{ attribute_value }}</p>
                {% endfor %}
            </div>
            <div class="right-variant variant">
                {% for attribute in product.metafields.accentuate.attribute[1] %}
                    <p>{{ attribute }}</p>
                {% endfor %}
                {% for attribute_value in product.metafields.accentuate.attribute_value[1] %}
                    <p>{{ attribute_value }}</p>
                {% endfor %}
            </div>
        </div>
