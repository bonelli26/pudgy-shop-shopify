                </button>
                {% render block %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Video Trio",
    "tag": "section",
    "class": "video-trio mw slider no-drag-free no-loop no-loop-mobile max-width",
    "settings": [
      {
        "id": "header",
        "type": "text",
        "label": "Header"
      },
      {
        "id": "copy",
        "type": "text",
        "label": "Copy"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }
    ]
  }
{% endschema %}
