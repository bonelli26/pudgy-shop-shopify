<div class="mini-cart-backdrop" id="mini-cart-backdrop"></div>
<div class="mini-cart" id="mini-cart">
    <div class="top">
        <p>shopping bag</p>
        <button id="nav-close" class="nav-close">
            <p>close</p>
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.705015 0.0150146L0.0150146 0.705015L8.31001 9.00001L0.0150146 17.295L0.705015 17.985L9.00001 9.69001L17.295 17.985L17.985 17.295L9.69001 9.00001L17.985 0.705015L17.295 0.0150146L9.00001 8.31001L0.705015 0.0150146Z" fill="black"/>
            </svg>
        </button>
    </div>
    <div class="shipping-bar" id="shipping-bar">
        <div class="shipping-messages">
            <p>$12.99 <strong>way from free shipping</strong></p>
        </div>
        <div class="track"><span id="shipping-meter-bar" class="shipping-meter-bar"></span></div>
    </div>
    <div class="inner c-24">
        <div class="products-wrapper" id="products-wrapper"></div>
    </div>
    <div class="bottom c-24">
        <div class="total bottom-line">
            <p>total</p>
            <p id="mini-cart-total">$120</p>
        </div>
        <form action="/cart" method="post">
            <button class="btn black checkout-btn" id="checkout-btn" name="checkout">
                Checkout
            </button>
        </form>
        <div class="bottom-benefits">
            <div class="icon-text">
                <img class="preload" data-preload-desktop="https:{{ settings.small_image_1 | image_url }}" data-preload-mobile="https:{{ settings.small_image_1 | image_url }}">
                <p>{{ settings.text_1 }}</p>
            </div>
            <div class="icon-text">
                <img class="preload" data-preload-desktop="https:{{ settings.small_image_2 | image_url }}" data-preload-mobile="https:{{ settings.small_image_2 | image_url }}">
                <p>{{ settings.text_2 }}</p>
            </div>
            <div class="icon-text">
                <img class="preload" data-preload-desktop="https:{{ settings.small_image_3 | image_url }}" data-preload-mobile="https:{{ settings.small_image_3 | image_url }}">
                <p>{{ settings.text_3 }}</p>
            </div>
        </div>
    </div>
    <div class="empty-wrapper" id="empty-wrapper">
        <p>Your cart is <strong>empty</strong></p>
        <a class="btn black" href="/collections/all">Start Shopping</a>
    </div>
</div>
